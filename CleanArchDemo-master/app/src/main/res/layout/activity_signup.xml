<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    >

    <include layout="@layout/custom_action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="@color/white"
            android:textColorHint="@color/colorGrayTitle"
            android:background="@drawable/round_corner_transparent"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:textSize="16sp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/ed_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:textColor="@color/white"
            android:textColorHint="@color/colorGrayTitle"
            android:background="@drawable/round_corner_transparent"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="@color/white"
            android:textColorHint="@color/colorGrayTitle"
            android:background="@drawable/round_corner_transparent"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/text_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:textSize="15sp"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_corner_solid"
            />

    </LinearLayout>

</RelativeLayout>